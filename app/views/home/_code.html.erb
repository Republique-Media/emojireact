<% if parse_emojis(params[:emojis]) %>
&lt;script type="text/javascript"&gt;
  var url = window.location.href.replace(/(http:\/\/|https:\/\/)/gi, '').replace(/^\/|\/$/g, '');
  document.write('&lt;iframe src="https://emojireact.com/embed?emojis=<%= parse_emojis(params[:emojis]) %>&url='+url+'" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:<%= parse_emojis(params[:emojis]).split(",").count * 65 %>px; height:35px;" allowtransparency="true" &gt;&lt;/iframe&gt;');
&lt;/script&gt;
<% end %>
